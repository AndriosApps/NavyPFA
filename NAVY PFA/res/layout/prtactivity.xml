<!--  Start Chris' change for Bike, Elliptical and Run seg Controller  -->
    
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/LinearLayout02" android:layout_width="match_parent" android:layout_weight="0" android:layout_height="wrap_content">
                <RadioGroup android:id="@+id/radioGroup1" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="30dip">
