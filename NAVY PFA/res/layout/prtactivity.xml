  <!--  Start Chris' change for Gender and Age  -->
  
      <LinearLayout android:id="@+id/linearLayout1" android:layout_weight="0" android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="horizontal" android:gravity="center">

