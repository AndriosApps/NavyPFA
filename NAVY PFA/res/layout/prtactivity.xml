        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/LinearLayout02" android:layout_width="260dip" android:layout_weight="0" android:layout_height="wrap_content">
            <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/linearLayout7">
