<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/book_list_empty_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Default Text" />

    <ProgressBar
        android:id="@+id/book_list_progress_bar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:gravity="center" />


    <android.support.v7.widget.RecyclerView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/book_list_recycler_view"
        android:name="com.andrios.booklistingapp.BookListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.andrios.booklistingapp.BookListActivity"
        tools:listitem="@layout/video_list_item">


    </android.support.v7.widget.RecyclerView>


</LinearLayout>